<%= form_tag reservations_path, method: :post do %>
    <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% @room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label :room_number, 'Room Number' %>
    <%= select_tag "room_number", options_from_collection_for_select(@all_rooms, "room_number", "room_number") -%>
  </div>

    <div class="field">
    <%= label :floor, 'Floor' %>
    <%= select_tag "floor", options_for_select(@floors.map{|floor| [floor, floor]}) -%>
  </div>

    <div class="field">
    <%= label :guest, 'Guest' %>
    <%= select_tag "guest_id", options_for_select(@guests.map{|guest| [guest.full_name, guest.id]}) -%>
  </div>

  <div class="field">
    <%= label :occupied, 'Occupied?' %>
    <%= check_box_tag :occupied %>
  </div>

  <div class="actions">
    <%= submit_tag 'Create Reservation' %>
  </div>
<% end %>
